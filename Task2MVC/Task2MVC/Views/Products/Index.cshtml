@model IEnumerable<Task2MVC.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p >
    @Html.ActionLink("Create New", "Create", new { id = "mp33" }, new { @class = "btn btn-warning" })
</p>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
           Product Name
        </th>
        <th>
            Unit Price
        </th>
        <th>
            Units In Stock
        </th>
        <th>
            Category Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryNAme)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }, new { @class = "btn btn-success btn-responsive" }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
